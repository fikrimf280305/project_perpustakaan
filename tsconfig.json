{   
    "compilerOptions": {
        "target": "esnext",
        "module": "nodenext",
        "strict": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "outDir": "./dist",
        "rootDir": "./src",
        "removeComments": true,
        "sourceMap": true
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules","dist"]
}